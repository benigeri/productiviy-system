{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "email-compose",
  "title": "Email Compose",
  "description": "Generate and save Gmail drafts from natural language instructions",
  "icon": "extension-icon.png",
  "author": "benigeri",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "compose-email",
      "title": "Compose Email Draft",
